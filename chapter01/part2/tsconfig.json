{
  // ** 表示任意目录
  // *  表示任意文件
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./src/hello/**/*"
  ],
  // 编译器选项
  "compilerOptions": {
    // target 编译为目标版本
    "target": "ES5",
    // 指定要使用的模块化规范
    "module": "ES2015",
    // 指定编译后输出文件目录
    "outDir": "./dist",
    // 所有全局作用域代码合并成一个输出文件（仅支持 system 和 amd 规范
    // "outFile": "./dist/bundle.js",
    // 是否对 js 文件进行编译，默认 false
    "allowJs": false,
    // 是否检查 js 代码符合语法规范，默认 false
    "checkJs": false,
    // 是否移除注释
    "removeComments": true,
    // 不生成编译后文件
    "noEmit": false,
    // 有错时不生成编译后文件
    "noEmitOnError": true,
    // 编译后文件是否严格模式，默认 false
    "alwaysStrict": true,
    // 不允许隐式 any
    "noImplicitAny": true,
    // 不允许不明类型的 this
    "noImplicitThis": false,
    // 严格检查 null 值
    "strictNullChecks": true,
    // 所有严格检查的总开关
    "strict": false
  }
}